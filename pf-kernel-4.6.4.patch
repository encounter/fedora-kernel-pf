+			NR_CPU_DEDICATED_TASK(p)++;
+		prq = task_preemptable_rq(p, 0);
+	}
+	task_access_unlock_irqrestore(lock, &flags);
+
+	preempt_rq(prq);
+
+	if (running_wrong)
+		preempt_schedule_common();
+
+	return ret;
