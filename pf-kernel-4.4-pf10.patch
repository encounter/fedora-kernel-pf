+		return earliest_deadline_task(rq, cpu, rq->idle);\
+	else {\
+		/*\
+		 * This CPU is now truly idle as opposed to when idle is\
+		 * scheduled as a high priority task in its own right.\
+		 */\
+		schedstat_inc(rq, sched_goidle);\
+		return rq->idle;\
+	}\
