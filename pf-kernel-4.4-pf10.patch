+	cpumask_and(res_mask, cpumask, topology_sibling_cpumask(cpu)) ||
+#endif
+
+#ifdef CONFIG_SCHED_MC
+	/* Cores shares last level cache */
+	cpumask_and(res_mask, cpumask, cpu_coregroup_mask(cpu))
+#else
+	0
