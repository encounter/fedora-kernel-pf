+static struct task_struct *\
+idle_choose_task##subfix(struct rq *rq, struct task_struct *prev,\
+			 bool preempt, unsigned long **pswitch_count)\
+{\
+	int cpu = cpu_of(rq);\
+	struct task_struct *next;\
+\
+	*pswitch_count = &prev->nivcsw;\
